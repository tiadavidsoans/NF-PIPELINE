// Nextflow configuration file

// Pipeline parameters
params {
    fastq_dir = "C:/Users/tiada/OneDrive/Documents/Test_pipeline"  // Path of FASTQ files
    output = "C:/Users/tiada/OneDrive/Documents/Test_pipeline/output"  // Path of output directory
    
    // Tool binaries (adjust paths for your Windows installation)
    fastqc_bin = "fastqc"
    cutadapt_bin = "cutadapt"
    bwa_bin = "bwa"
    bcftools_bin = "bcftools"
    
    // Reference and adapter
    reference = "C:/Users/tiada/OneDrive/Documents/nextflow/reference/chr22.fa"
    adapter = "AGATCGGAAGAG"  // Standard Illumina TruSeq adapter
    
    // BWA index path (derived from reference)
    bwa_index = "${params.reference}"
}

// Process configuration
process {
    executor = 'local'
    cpus = 4
    memory = '8 GB'
    time = '1h'
}

// Container configuration
docker {
    enabled = false
    docker.registry = 'quay.io'
    docker.temp = 'auto'
}

// Singularity configuration
singularity {
    enabled = false
    autoMounts = true
}

// Report settings
report {
    enabled = true
    file = "${params.output}/pipeline_report.html"
}

// Trace settings
trace {
    enabled = true
    file = "${params.output}/trace.txt"
}

// Timeline settings
timeline {
    enabled = true
    file = "${params.output}/timeline.html"
}

// DAG settings
dag {
    enabled = true
    file = "${params.output}/dag.png"
}
