// Nextflow configuration file

// Pipeline parameters
params {
    fastq_dir = "data"
    output = "results"
    adapter = "AGATCGGAAGAGCACACGTCTGAACTCCAGTCAC"
    fastqc_bin = "fastqc"
    bwa_index = "reference/genome.fasta"
}

// Process configuration
process {
    executor = 'local'
    cpus = 4
    memory = '8 GB'
    time = '1h'
}

// Container configuration
docker {
    enabled = true
    docker.registry = 'quay.io'
    docker.temp = 'auto'
}

// Singularity configuration
singularity {
    enabled = false
    autoMounts = true
}

// Report settings
report {
    enabled = true
    file = "${params.output}/pipeline_report.html"
}

// Trace settings
trace {
    enabled = true
    file = "${params.output}/trace.txt"
}

// Timeline settings
timeline {
    enabled = true
    file = "${params.output}/timeline.html"
}

// DAG settings
dag {
    enabled = true
    file = "${params.output}/dag.png"
}
